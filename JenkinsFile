pipeline {
    agent any

    environment {
        bookaloo-image = "yourdockerhubusername/rails-app"
        WEBHOOK_SECRET = credentials('github-webhook-secret')        
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/mlrdevs/bookaloo.git'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'bundle install'
                sh 'RAILS_ENV=test bundle exec rspec'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $bookaloo-image:latest .'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                    sh 'docker push $bookaloo-image:latest'
                }
            }
        }

        stage('Deploy') {
            steps {
                sshagent(['vps-ssh-key']) {
                    sh '''
                    ssh root@134.209.242.198 <<EOF
                    docker pull $bookaloo-image:latest
                    docker stop rails-app || true
                    docker rm rails-app || true
                    docker run -d --name rails-app -p 3000:3000 --env-file .env $bookaloo-image:latest
                    EOF
                    '''
                }
            }
        }
    }
}
